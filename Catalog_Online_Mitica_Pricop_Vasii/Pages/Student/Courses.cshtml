@page
@model Catalog_Online_Mitica_Pricop_Vasii.Pages.Student.CoursesModel
@{
    ViewData["Title"] = "My Courses";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="d-flex justify-content-between mb-3">
        <div>
            <a asp-page="./Courses" asp-route-sortOrder="name" class="btn btn-outline-primary">Sort by Name (A-Z)</a>
            <a asp-page="./Courses" asp-route-sortOrder="name_desc" class="btn btn-outline-primary">Sort by Name (Z-A)</a>
        </div>
        <div>
            <a asp-page="./Courses" asp-route-sortOrder="grade" class="btn btn-outline-success">Sort by Grade (Low-High)</a>
            <a asp-page="./Courses" asp-route-sortOrder="grade_desc" class="btn btn-outline-success">Sort by Grade (High-Low)</a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Course</th>
                <th>Professor</th>
                <th>Grade</th>
                <th>Academic Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model.Enrollments)
            {
                <tr>
                    <td>@enrollment.Course?.Title</td>
                    <td>@enrollment.Course?.Professor?.FullName</td>
                    <td>@(enrollment.Grade.HasValue ? enrollment.Grade.ToString() : "-")</td>
                    <td>@enrollment.Course?.AcademicYear</td>
                </tr>
            }
        </tbody>
    </table>
</div>