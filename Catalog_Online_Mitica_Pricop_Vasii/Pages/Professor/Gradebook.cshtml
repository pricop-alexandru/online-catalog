@page
@model Catalog_Online_Mitica_Pricop_Vasii.Pages.Professor.GradeBookModel
@{
    ViewData["Title"] = "Grade Book";
}

<div class="container mt-4">
    <h2>@ViewData["Title"] - @Model.Course.Title</h2>

    <form method="post">
        <table class="table table-striped">
            <thead class="table-primary">
                <tr>
                    <th>Student Name</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Enrollments.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.Enrollments[i].Student?.FullName
                            <input type="hidden" asp-for="@Model.Enrollments[i].Id" />
                        </td>
                        <td>
                            <input asp-for="@Model.Enrollments[i].Grade" class="form-control" min="1" max="10" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Save Grades</button>
    </form>
</div>